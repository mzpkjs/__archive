{
  "compilerOptions": {
    "rootDir": "./source",

    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "./",

    "declaration": true,
    "importHelpers": true,
    "noEmitOnError": true,

    "newLine": "lf",
    "sourceMap": true,
    "declarationMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "downlevelIteration": false,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,

    "lib": [
      "ES6",
      "DOM"
    ]
  },
  "exclude": [
    "node_modules",
    "examples"
  ]
}